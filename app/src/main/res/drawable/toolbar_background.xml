<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A50034"/>
            <corners android:radius="4dp"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="4dp"/>
        </shape>
    </item>
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/> <!-- Semi-transparent black for shadow -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
